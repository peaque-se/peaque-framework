{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "jsx": "react-jsx",
    "paths": {
      "@peaque/framework": ["./src/index.ts"],
      "@peaque/framework/server": ["./src/http/index.ts"],
      "@peaque/framework/server/hostname-handlers": ["./src/http/hostname-handlers/index.ts"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
